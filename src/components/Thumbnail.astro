---
import { Image } from "astro:assets";

export interface Props {
    project: {
        title: string;
        image: ImageMetadata;
        color: string;
        date: string;
        type: string[];
        technology: string[];
    };
}
const { project } = Astro.props;
const shadowcolor = "#" + project.color + "40";
---

<div class="@container relative rounded overflow-hidden bg-gray-50 dark:bg-gray-950 projectShadow transition-all">
    <Image src={project.image} alt="" />
    <h1 class="absolute top-[30%] left-1/2 -translate-x-1/2 -translate-y-full text-white text-xl @sm:text-4xl">{project.title}</h1>
    <h2 class="absolute top-2 sm:top-4 left-1/2 -translate-x-1/2 text-black text-xs @sm:text-base mix-blend-overlay">
        {project.date.slice(0, 4)}
    </h2>
    <div class="flex gap-2 absolute top-2 sm:top-4 left-3 sm:left-6 text-black text-xs sm:text-base mix-blend-overlay">
        {
            project.type.map((type) => {
                if (type === "Design")
                    return (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-pen-tool"
                        >
                            <path d="m12 19 7-7 3 3-7 7-3-3z" />
                            <path d="m18 13-1.5-7.5L2 2l3.5 14.5L13 18l5-5z" />
                            <path d="m2 2 7.586 7.586" />
                            <circle cx="11" cy="11" r="2" />
                        </svg>
                    );
                if (type === "Development")
                    return (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-code"
                        >
                            <polyline points="16 18 22 12 16 6" />
                            <polyline points="8 6 2 12 8 18" />
                        </svg>
                    );
            })
        }
    </div>
    <div class="flex gap-2 absolute top-2 sm:top-4 right-3 sm:right-6 text-black text-xs sm:text-base mix-blend-overlay items-center">
        {
            project.technology.map((technology) => {
                if (technology === "Figma")
                    return (
                        <svg width="12" height="17" viewBox="0 0 12 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g clip-path="url(#clip0_7_1915)">
