						<path d="M3.28665 3.28665L4.22665 4.22665" stroke="white" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"></path>
						<path d="M11.7733 11.7733L12.7133 12.7133" stroke="white" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"></path>
						<path d="M1.33334 8H2.66668" stroke="white" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"></path>
						<path d="M13.3333 8H14.6667" stroke="white" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"></path>
						<path d="M4.22665 11.7733L3.28665 12.7133" stroke="white" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"></path>
						<path d="M12.7133 3.28665L11.7733 4.22665" stroke="white" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"></path>
					</g>
					<defs>
						<clipPath id="clip0_5_1705">
							<rect width="16" height="16" fill="white"></rect>
						</clipPath>
					</defs>
				</svg>
			</button>
		</header>
		<slot />
	</body>
</html>
