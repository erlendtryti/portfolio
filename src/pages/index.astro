---
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Thumbnail from "../components/Thumbnail.astro";

const allProjects = await getCollection("projects");
---

<Layout title="erlendtryti">
	<main class="my-8">
		<h1 class="sm:text-2xl mb-4 mx-8">Hey there, Iâ€™ll help you design and<br /> develop a clean and modern website.</h1>
		<div class="flex gap-2 text-xs mb-8 mx-8">
			<button class="px-4 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded transition-all duration-100">Contact Me</button>
			<a
				href="https://github.com/erlendtryti"
				class="flex gap-2 px-4 py-3 bg-gray-200 hover:bg-gray-300 dark:bg-gray-800 hover:dark:bg-gray-900 rounded transition-all duration-75"
			>
				<svg width="17" height="18" viewBox="0 0 17 18" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path
						d="M6.38462 14.7172C2.53846 15.8586 2.53846 12.8149 1 12.4344M11.7692 17V14.0552C11.7981 13.6923 11.7485 13.3276 11.6239 12.9852C11.4992 12.6427 11.3023 12.3305 11.0462 12.0691C13.4615 11.8028 16 10.8973 16 6.74261C15.9998 5.68022 15.5867 4.65856 14.8462 3.88911C15.1968 2.95963 15.172 1.93225 14.7769 1.02039C14.7769 1.02039 13.8692 0.754061 11.7692 2.14657C10.0062 1.67389 8.14769 1.67389 6.38462 2.14657C4.28462 0.754061 3.37692 1.02039 3.37692 1.02039C2.98183 1.93225 2.95703 2.95963 3.30769 3.88911C2.56164 4.66427 2.14809 5.69516 2.15385 6.76544C2.15385 10.8897 4.69231 11.7952 7.10769 12.092C6.85461 12.3507 6.65943 12.6592 6.53485 12.9974C6.41027 13.3357 6.35908 13.6961 6.38462 14.0552V17"
						stroke="currentColor"
						stroke-width="1.5"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
				</svg>
				/ erlendtryti
			</a>
		</div>
		<div class="grid gap-6 grid-cols-1 md:grid-cols-2 mx-8 md:mx-0">
			{
				allProjects.map((project) => (
					<a
						href={"project/" + project.slug}
						class="@container sm:first:col-span-2 relative hover:scale-[100.5%] @sm:hover:scale-[100.25%] transition-transform"
					>
						<Thumbnail project={project.data} />
					</a>
				))
			}
		</div>
	</main>
</Layout>
